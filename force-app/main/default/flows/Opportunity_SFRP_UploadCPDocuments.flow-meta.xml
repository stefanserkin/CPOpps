    <formulas>
        <name>strFmlDefaultDocName</name>
        <dataType>String</dataType>
        <expression>LEFT(
CASE(
  {!Input_DocumentType_Radio},
  {!choiceLetterOfAgreement}, &quot;LOA &quot;,
  {!choiceWorkOrder}, &quot;Work Order &quot;,
  {!choicePurchaseOrder}, &quot;PO &quot;,
  &quot;&quot;
) &amp; 
IF( 
  !ISBLANK( {!recordId.Account.DBN__c} ), 
  RIGHT( {!recordId.Account.DBN__c}, 3 ) &amp; MID( {!recordId.Account.DBN__c}, 3, 1) &amp; &quot; &quot;,
  &quot;&quot;
) &amp; 
{!recordId.Account.Name}, 
80
)</expression>
    </formulas>
    <formulas>
        <name>strFmlSelectedNextStage</name>
        <dataType>String</dataType>
